    "@inquirer/password": "^2.1.20",
    "commander": "^12.1.0",
    "dayjs": "^1.11.12",
    "dotenv": "^16.4.5",
    "hast": "^1.0.0",
    "hast-util-select": "^6.0.2",
    "jose": "^5.6.3",
    "mjml": "^4.15.3",
    "node-pg-migrate": "^7.6.0",
    "ora": "^8.0.1",
    "pg": "^8.12.0",
    "rehype": "^13.0.1",
    "rehype-preset-minify": "^7.0.0",
    "rehype-stringify": "^10.0.0",
    "zod": "^3.23.8"
  }
